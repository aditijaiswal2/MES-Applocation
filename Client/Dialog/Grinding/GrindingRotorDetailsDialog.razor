                                <MudTextField Label="Materials" @bind-Value="selectedData.Materials" FullWidth="true" Variant="Variant.Outlined" ReadOnly />

                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Others" @bind-Value="selectedData.Others" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">

                                <MudTextField Label="Rotor Dia." @bind-Value="selectedData.RotorsDia" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Rotor Style" @bind-Value="selectedData.RotorStyle" FullWidth="true" Variant="Variant.Outlined" ReadOnly />

                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Type" @bind-Value="selectedData.Type" FullWidth="true" Variant="Variant.Outlined" ReadOnly />

                            </MudItem>

