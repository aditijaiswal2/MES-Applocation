                            <MudItem xs="4">
                                <MudTextField Label="Manual Labor" @bind-Value="selectedData.ManualLabor" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Box Received with Saddles (Bottom)" @bind-Value="selectedData.Bottom" FullWidth="true" Variant="Variant.Outlined" ReadOnly />

