                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Ceramic Seals" @bind-Value="selectedData.CeramicSeals" FullWidth="true" Variant="Variant.Outlined" ReadOnly />

                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Bearing Journal Dia (Right)" @bind-Value="selectedData.Right" FullWidth="true" Variant="Variant.Outlined" ReadOnly />

