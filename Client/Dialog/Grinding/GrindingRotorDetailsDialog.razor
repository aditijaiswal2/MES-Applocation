@using MES.Shared.Models.Rotors

<MudDialog>
    <MudGrid Class="d-flex justify-center">

        @if (selectedData != null)
        {
            <MudItem xs="12" md="8">
                <MudPaper Elevation="3" Class="pa-3" Style="overflow: visible;">
                    @if (selectedData != null)
                    {
                        <MudGrid>
                            <MudItem xs="4">
