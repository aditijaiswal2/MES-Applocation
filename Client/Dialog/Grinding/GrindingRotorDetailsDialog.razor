                            <MudItem xs="4">
                                <MudTextField Label="Mat#" Value="@selectedData.MatNumber" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Customer" @bind-Value="selectedData.Customer" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>
                            <MudItem xs="4">
                                <MudTextField Label="Location" @bind-Value="selectedData.Location" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>
                            <MudItem xs="4">
                                <MudTextField Label="Received" @bind-Value="selectedData.Received" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>
                            <MudItem xs="4">
                                <MudTextField Label="Inspected" @bind-Value="selectedData.Inspected" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Rotors#" @bind-Value="selectedData.RotorsNumber" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Initials" @bind-Value="selectedData.Initials" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Make" @bind-Value="selectedData.Make" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Dia" @bind-Value="selectedData.Dia" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Len" @bind-Value="selectedData.Len" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Fits" @bind-Value="selectedData.Fits" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

