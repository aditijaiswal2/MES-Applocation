                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="QTY" @bind-Value="selectedData.AddQty" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                            </MudItem>

                            <MudItem xs="4">
                                <MudTextField Label="Set-up Tir Left Journal" @bind-Value="selectedData.TirLeftJournal" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
