            </MudGrid>

            <MudGrid Spacing="3">

                <MudItem xs="12" md="4">
                    <MudTextField Label="Box Received with Saddles (Bottom)" @bind-Value="InspectionData.Bottom" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudTextField Label="Box Received with Saddles (Top)" @bind-Value="InspectionData.Top" FullWidth="true" Variant="Variant.Outlined" ReadOnly />
